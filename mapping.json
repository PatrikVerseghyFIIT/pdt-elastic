{	
	"settings": {
		"analysis": {
			"analyzer": {
				"englando": {
                    "filter": [
                        "english_possessive_stemmer",
                        "lowercase",
                        "english_stop",
                        "english_stemmer"
                    ],
                    "char_filter": [
                        "html_strip"
                    ],
                    "tokenizer": "standard"
                },
                "custom_ngram": {
                    "filter": [
                        "lowercase",
                        "asciifolding",
                        "custom_ngram"
                    ],
                    "char_filter": [
                        "html_strip"
                    ],
                    "tokenizer": "standard"
                },
                "custom_shingles": {
                    "filter": [
                        "lowercase",
                        "asciifolding",
                        "custom_shingles"
                    ],
                    "char_filter": [
                        "html_strip"
                    ],
                    "tokenizer": "standard"
                }
            },
            "filter": {
                "custom_ngram": {
                    "type": "ngram",
                    "min_gram": 2,
                    "max_gram": 3
                },
                "custom_shingles": {
                    "type": "shingle",
                    "min_shingle_size": 2,
                    "max_shingle_size": 3,
                    "token_separator": ""                    
                },
                "english_stop": {
                    "type":       "stop",
                    "stopwords":  "_english_" 
                },
                "english_stemmer": {
                    "type":       "stemmer",
                    "language":   "english"
                },
                "english_possessive_stemmer": {
                    "type":       "stemmer",
                    "language":   "possessive_english"
                }
            }  
		}
	},
	"mappings": {
		"properties": {
			"id": {
		        	"type": "keyword"
		    	},
		    	"content": {
		    		"type": "text",
		    		"analyzer": "englando"
		    	},
		    	"location": {
		        	"type": "geo_point"
		    	},
		    	"retweet_count": {
		        	"type": "integer"
		    	},
		    	"favorite_count": {
		        	"type": "integer"
		    	},
		    	"hapened_at": {
				"type": "date",
				"format": "yyyy-MM-dd HH:mm:ss"
		    	},
		    	"author": {
		    		"type": "object",
		    		"properties": {
		    			"id" : {
                            "type" : "integer",
                            "index" : false
					    },
		    			"name": {
                            "type": "text",
                            "analyzer": "custom_ngram",
                            "search_analyzer": "custom_shingles"
		    			},
		    			"screen_name": {
                            "analyzer": "custom_ngram",
		    				"type": "text"
		    			},
		    			"description": {
		    				"type": "text",
                            "analyzer": "englando",
                            "search_analyzer": "custom_shingles"
		    			},
		    			"follower_count": {
		    				"type" : "integer"
		    			},
		    			"friends_count": {
		    				"type" : "integer"
		    			},
		    			"statuses_count": {
		    				"type" : "integer"
		    			}
		    		}
		    	},
		    	"country": {
		    		"type": "object",
		    		"properties": {
		    			"id" : {
					  	"type" : "integer",
					  	"index" : false
					},
		    			"code": {
		    				"type": "keyword"
		    			},
		    			"name": {
		    				"type": "text"
		    			}	
		    		}
		    	},
		    	"parent_id": {
		    		"type": "keyword"
		    	},
		    	"hashtags": {
		    		"type": "keyword"
		    	},
		    	"users_mentions": {
                    "type": "nested",
                    "properties": {
                        "id" : {
                            "type" : "integer",
                            "index" : false
					    },
		    			"name": {
                            "type": "text",
                            "analyzer": "custom_ngram",
                            "search_analyzer": "custom_shingles"
		    			},
		    			"screen_name": {
                            "analyzer": "custom_ngram",
		    				"type": "text"
		    			},
		    			"description": {
		    				"type": "text",
                            "analyzer": "englando",
                            "search_analyzer": "custom_shingles"
		    			},
		    			"follower_count": {
		    				"type" : "integer"
		    			},
		    			"friends_count": {
		    				"type" : "integer"
		    			},
		    			"statuses_count": {
		    				"type" : "integer"
		    			}
                    }
	      		}
		}
	}
}



